<style>
    body{
        margin: 0;
    }
.maincontainer{
    background: rgb(140, 127, 127);
    width: 100%;
    height: 100%;
    display :flex;
    justify-content: center;
    align-items: center;
}
.box{
    background:#fff;
    width: 91%;
    height: auto;
    border-radius: 15px;
    padding: 20px;
}
.heading{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.headingstyle{
    margin-left: 10px;
    font-size: 18px;
    font-weight: bold;
}
.pic{
        width:80px;
        height:60px;
        
    }
    .addpic{
        width:50px;
        height:50px;
        border-radius: 10px;
    }
</style>

<html>
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    </head>

    <body>
        <div class="maincontainer">
            <div class="box">
                <div class="heading">
                    <div style="display:flex;align-items:center;">
                        <img src="/images/logo.jpg" width="75px">
                        <div class="headingstyle">Movies List</div>
                    </div>

                    <div style="margin-left:auto" >
                        <a href="/movie/movie_interface"><img src="/images/add.jpg" width="75px" class="addpic"></a>
                    </div>
                </div>
           
           
           <table class="table">
            <tr>
                <th>Sn</th>
                <th>Movie Id</th>
                <th>State</th>
                <th>Movie Name</th>
                <th>Actors Name</th>
                <th>Actress Name</th>
                <th>Music Director</th>
                <th>Director(Producer)</th>
                <th>Music Company(Logo)</th>
                <th>Cinema</th>
                <th>Screen(Time)</th>
                <th>Picture</th>
                <th>Edit</th>

            </tr>

            <%
            data.map((item,i)=>{%>
                <tr>
                    <td><%=i+1 %></td>
                    <td><%=item.movieid %></td>
                    <td><%=item.statename %><br><%=item.cityname %></td>
                    <td><%=item.moviename %></td>
                    <td><%=item.actorsname %></td>
                    <td><%=item.actressname %></td>
                    <td><%=item.musicdirector %></td>
                    <td><%=item.director %> (<%=item.producer %>)</td>
                    <td><%=item.musiccompany%> <img src='/images/<%=item.logo %>' class="pic" /></td>
                    <td><%=item.cinema %></td>
                    <td><%=item.screen%> (<%=item.time %>)</td>
                    <td><a href="/movie/show_picture?movieid=<%=item.movieid%>&moviename=<%=item.moviename%>&poster=<%=item.poster%>"><img src='/images/<%=item.poster %>' class="pic"/></a></td>
                    <td><a href="/movie/update_movie?movieid=<%=item.movieid%>"><button type="button" class="btn btn-info">Update</button></a></td>
                </tr>
            <%})%>

           </table>
           
           
            </div>
        </div>
    </body>
</html>