<style>
    body{
        margin: 0;
    }
.maincontainer{
    background: rgb(140, 127, 127);
    width: 100%;
    height: 100%;
    display :flex;
    justify-content: center;
    align-items: center;
}
.box{
    background:#fff;
    width: 60%;
    height: auto;
    border-radius: 15px;
    padding: 20px;
}
.heading{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.headingstyle{
    margin-left: 10px;
    font-size: 18px;
    font-weight: bold;
}
.btncenter{
    display: flex;
    justify-content: center;
}
.btnsize{
    margin-top: 5px;
    width: 80%;
}

</style>


<html>
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="/javascripts/project.js"></script>
    </head>
    <form action="/movie/update_all_movie" method="post">
        <input type="hidden" value="<%=data.movieid %>" name="movieid">

    <div class="maincontainer">
        <div class="box">
            <div class="row">
                <div class="col-12">

                    <div class="heading">
                      <img src="/images/logo.jpg" width="75px">
                      <div class="headingstyle">
                         Update Movie Production
                      </div>

                      <div style="margin-left:auto" >
                        <a href="/movie/display_all_movie"><img src="/images/display.jpg" width="75px" class="addpic"></a>
                      </div>

                    </div>
                </div>
            </div>

        
            <div class="row" style="margin-top: 12px;">
                <div class="col-xs-12 col-sm-12 col-lg-4">
                    <select name="stateid" id="stateid" class="form-select" >
                        <option selected value="<%=data.stateid %>"><%=data.statename %></option>
                        
                    </select>
                </div>

                <div class="col-xs-12 col-sm-12 col-lg-4">
                    <select name="cityid" id="cityid" class="form-select" >
                        <option selected value="<%=data.cityid%>"><%=data.cityname%></option>
                    </select>
                </div>
                
                <div class="col-xs-12 col-sm-12 col-lg-4">
                    <input type="text" value="<%=data.moviename%>" required name="moviename" id="moviename" class="form-control" placeholder="Movie Name">
                </div>    
                      
            </div>


            <div class="row" style="margin-top: 10px;">
                <div class="col-xs-12 col-sm-12 col-lg-6">
                    <input type="text" value="<%=data.actorsname%>" name="actorsname" id="actorsname" class="form-control" placeholder="Actors Name">   
                </div>

                <div class="col-xs-12 col-sm-12 col-lg-6">
                    <input type="text" value="<%=data.actressname%>" name="actressname" id="actressname" class="form-control" placeholder="Actress Name">   
                </div>
            
            </div>


            <div class="row" style="margin-top: 10px;">
                <div class="col-xs-12 col-sm-12 col-lg-4">
                    <input type="text" value="<%=data.musicdirector%>" name="musicdirector" id="musicdirector" class="form-control" placeholder="Music Director">  
                </div>
                
                <div class="col-xs-12 col-sm-12 col-lg-4">
                    <input type="text" value="<%=data.director%>" name="director" id="director" class="form-control" placeholder=" Movie Director">  
                </div>

                <div class="col-xs-12 col-sm-12 col-lg-4">
                    <input type="text" value="<%=data.producer%>" name="producer" id="producer" class="form-control" placeholder="Movie Producer">  
                </div>

            </div>


            <div class="row" style="margin-top: 10px;">
                <div class="col-xs-12 col-sm-12 col-lg-6">
                    <input type="text" value="<%=data.musiccompany%>" name="musiccompany" id="musiccompany" class="form-control" placeholder="Music Company">
                </div>

                <div class="col-xs-12 col-sm-12 col-lg-1">
                    <img id="mp">
                </div>

                <div class="col-xs-12 col-sm-12 col-lg-5">
                    <input onchange="showpicture()" value="<%=data.logo%>" class="form-control" type="file" name="logo" id="logo">
                </div> 

            </div>

            
                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-12 col-sm-12 col-lg-4">
                        <select name="cinema" id="cinema" class="form-select" >
                            <option selected value="<%=data.cinema%>"><%=data.cinema%></option>
                            <option>PVR</option>
                            <option>Inox</option>
                            <option>Fun</option>
                        </select>
                    </div>
                   
                    <div class="col-xs-12 col-sm-12 col-lg-4">
                        <div class="form-check form-check-inline">
                            <input <% if(data.screen=="Screen1") {%> checked <%}%> class="form-check-input" type="radio" name="screen" id="sreen" value="Screen1">
                            <label class="form-check-label" for="Screen1">Screen1</label>
                        </div>

                        <div class="form-check form-check-inline">
                            <input <% if(data.screen=="Screen2") {%> checked <%}%> class="form-check-input" type="radio" name="screen" id="sreen" value="Screen2">
                            <label class="form-check-label" for="Screen2">Screen2</label>
                        </div>
                   
                        <div class="form-check form-check-inline">
                            <input <% if(data.screen=="Screen3") {%> checked <%}%> class="form-check-input" type="radio" name="screen" id="sreen" value="Screen3">
                            <label class="form-check-label" for="Screen3">Screen3</label>
                        </div>
                    </div>
        
                    <div class="col-xs-12 col-sm-12 col-lg-4">
                        <input value="<%=data.time%>" type="text" name="time" id="time" class="form-control" placeholder="Movie Time">
                    </div>
                </div>


               
        

                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-12 col-sm-12 col-lg-6 btncenter">
                        <button class="btn btn-primary btnsize" type="submit" name="btn" value="Edit">Edit</button>
                    </div>

                    <div class="col-xs-12 col-sm-12 col-lg-6 btncenter">
                        <button class="btn btn-primary btnsize" type="submit" name="btn" value="Delete">Delete</button>
                    </div>
                </div>


    
        
        
        
        
        
        </div>

    </div>
    </form>
</html>